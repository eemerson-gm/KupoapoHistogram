#
# =======================================================
#                     Data Consumer
# =======================================================
# FINAL BINARY data consumer
./bin/DC : ./obj/DC.o
	cc ./obj/DC.o -o ./bin/DC -lpthread
#
# =======================================================
#                     Dependencies
# =======================================================
./obj/DC.o : ./src/DC.c ../inc/Header.h
	cc -c ./src/DC.c -o ./obj/DC.o -lpthread

#
# =======================================================
# Other targets
# =======================================================
clean:
	rm -f ./bin/*
	rm -f ./obj/*
	rm -f ./src/DC.c~
